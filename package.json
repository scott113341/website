{
  "name": "website",
  "description": "This is my personal website.",
  "author": "Scott Hardy",
  "license": "MIT",
  "repository": "git@github.com:scott113341/website.git",
  "homepage": "https://www.scotthardy.me",
  "scripts": {
    "develop": "nodemon --ext pug,less,md --ignore build/ --exec 'npm run build && npm run serve'",
    "serve": "http-server build/ -p ${PORT:-3000} -c 0",
    "build": "./build.sh",
    "deploy": "npm run build && push-dir --dir build --branch gh-pages --cleanup",
    "deps": "npm shrinkwrap --dev && shrinkpack"
  },
  "devDependencies": {
    "git-credential-env": "1.0.0",
    "http-server": "0.9.0",
    "jstransformer-marked": "1.0.1",
    "less": "2.7.1",
    "less-plugin-clean-css": "1.5.1",
    "nodemon": "1.9.2",
    "pug": "2.0.0-beta3",
    "pug-cli": "1.0.0-alpha6",
    "push-dir": "0.2.1",
    "shrinkpack": "0.13.1"
  }
}
